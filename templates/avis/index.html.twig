{% extends 'base.html.twig' %}

{% block title %}Liste des commentaires{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css">
{% endblock %}

{% block body %}
    <h1>Liste des commentaires</h1>
    
<div class="p-2">
    <a class="btn btn-outline-info mb-2" href="javascript:history.back()">Retour</a>
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Commentaire</th>
                    <th class="d-none d-md-table-cell">Publié le :</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for avi in avis %}
                <tr>
                    <td>{{ avi.text | slice(0,30)}}...</td>
                    <td class="d-none d-sm-table-cell">{{ avi.datePublication ? avi.datePublication|date('d/m/Y') : '' }}</td>
                    <td>
                        <a class="btn btn-outline-success" href="{{ path('avis_show', {'id': avi.id}) }}">Détail</a>
                        {# <a class="btn btn-outline-warning" href="{{ path('avis_edit', {'id': avi.id}) }}">Modifier</a> #}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun commentaire</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

</div> 
{% endblock %}


{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready( function () {
            $('table').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.11.3/i18n/fr_fr.json'
            }
        });
        } );
    </script>
{% endblock %}
