{% extends 'admin/admin.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
<div>
    <h1>Liste des utilisateurs</h1>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th class="d-none d-lg-table-cell">Roles</th>
                    <th class="d-none d-sm-table-cell">Nom</th>
                    <th class="d-none d-md-table-cell">Prenom</th>
                    <th class="d-none d-sm-table-cell">E-mail</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td class="d-none d-lg-table-cell">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td class="d-none d-sm-table-cell">{{ user.nom }}</td>
                    <td class="d-none d-md-table-cell">{{ user.prenom }}</td>
                    <td class="d-none d-sm-table-cell">{{ user.mail }}</td>
                    <td>
                        <a class="btn btn-outline-info" href="{{ path('admin_user_show', {'id': user.id}) }}">DÃ©tail</a>
                        <a class="btn btn-outline-warning" href="{{ path('admin_user_edit', {'id': user.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">Aucun utilisateur</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
