{% extends 'base.html.twig' %}      

{% block title %}Mon Compte{% endblock %}

{% block body %}
    
    <h1>{{ user.nom|capitalize }} {{ user.prenom|capitalize }}</h1>
    
    <div class="text-center mb-md-5">
        {% if user.photo %}
            <img src="{{user.photo  }}" class="my-3" alt="{{ user.nom }}">
        {% else %}
            <img src="{{asset("img/avatar-neutre.png")}}" class="my-3" alt="pas de photo">
        {% endif %}
        <p>Pseudo : {{user.username}}</p>
        <p>Nom : {{user.nom}}</p>
        <p>Pr√©nom : {{user.prenom}}</p>
        <p>E-mail : {{user.mail}}</p>
    </div>
    
    <div class="d-flex flex-column flex-md-row justify-content-around my-3">
            <a href="{{ path('app_edit', {'id': user.id}) }}" class="btn btn-vert-creation_Samm mx-5 mx-md-0"> 
                Modifier mes informations</a>
            <a href="{{ path('app_annonce', {'id': user.id}) }}" class="btn btn-vert-creation_Samm my-1 my-md-0 mx-5 mx-md-0">
                {{nbAnnonce}} annonces</a>
            <a href="{{ path('app_conseil', {'id': user.id}) }}" class="btn btn-vert-creation_Samm my-1 my-md-0 mx-5 mx-md-0">
                {{nbConseil}} conseils</a>  
            <a href="{{ path('app_avis', {'id': user.id}) }}" class="btn btn-vert-creation_Samm my-1 my-md-0 mx-5 mx-md-0">
                {{nbAvis}} commentaires</a>  
            <a href="{{ path('app_message_recu', {'id': user.id}) }}" class="btn btn-vert-creation_Samm mx-5 mx-md-0">
                {% if msgNonLu > 0 %}
                    {{msgNonLu}} nouveaux messages 
                {% else %}
                    message
                {% endif %}  
            </a>  
    </div>
     
{% endblock %}
